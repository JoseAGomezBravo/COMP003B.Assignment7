@model COMP003B.Assignment7.Models.Actor

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Actor</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ActorName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ActorName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MovieName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MovieName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.YearReleased)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.YearReleased)
        </dd>
    </dl>
</div>
<div class="col-md-4">
    <h4>Movies</h4>
    <ul>
        @foreach (Movie movie in ViewBag.Movies)
        {
            <li>@movie.MovieName</li>
        }
    </ul>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ActorId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
